{
    "name": "Amazing Re Order",
    "version": "0.1.0",
    "description": "Reorder order pages. Also shows more orders per page.",
    "homepage_url": "https://github.com",
    "manifest_version": 3,
    "icons": {
        "16": "icon16.png",
        "32": "icon32.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "permissions": [],
    "web_accessible_resources": [
        {
            "resources": ["*.js"],
            "matches": ["<all_urls>"]
        }
    ],
    "content_scripts": [
        {
            "type": "module",
            "js": [
                "./extLoader.js"
            ],
            "run_at": "document_end",
            "matches": [
                "*://*.amazon.com/*",
                "*://*.amazon.co.uk/*",
                "*://*.amazon.ca/*",
                "*://*.amazon.de/*",
                "*://*.amazon.es/*",
                "*://*.amazon.fr/*",
                "*://*.amazon.it/*",
                "*://*.amazon.co.jp/*",
                "*://*.amazon.in/*",
                "*://*.amazon.cn/*",
                "*://*.amazon.com.sg/*",
                "*://*.amazon.com.mx/*",
                "*://*.amazon.ae/*",
                "*://*.amazon.com.br/*",
                "*://*.amazon.nl/*",
                "*://*.amazon.com.au/*",
                "*://*.amazon.com.tr/*",
                "*://*.amazon.sa/*",
                "*://*.amazon.se/*",
                "*://*.amazon.pl/*"
            ]
        }
    ]
}